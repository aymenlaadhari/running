<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.runningchallenge.TestWS" >

    <TextView
        android:id="@+id/dtaJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Data" />

    <Button
        android:id="@+id/PostStat"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="PostStat" />

    <Button
        android:id="@+id/PostRunner"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/dtaJson"
        android:text="PostRunner" />

    <Button
        android:id="@+id/GetRank"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/PostStat"
        android:layout_below="@+id/PostRunner"
        android:text="GetRank" />

    <Button
        android:id="@+id/GetRunnerStat"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/GetRank"
        android:layout_alignBottom="@+id/GetRank"
        android:layout_alignLeft="@+id/PostRunner"
        android:text="GetRunnerInfo" />

    <Button
        android:id="@+id/existRunner"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/GetRank"
        android:layout_below="@+id/GetRank"
        android:text="ExistRunner" />

    <Button
        android:id="@+id/GetStatistics"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/existRunner"
        android:layout_alignBottom="@+id/existRunner"
        android:layout_toLeftOf="@+id/dtaJson"
        android:text="GetStatistics" />

    <Button
        android:id="@+id/updateRunner"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/GetStatistics"
        android:layout_below="@+id/GetStatistics"
        android:layout_marginRight="14dp"
        android:layout_marginTop="17dp"
        android:text="updateRunner" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/GetRank"
        android:layout_below="@+id/updateRunner"
        android:layout_marginLeft="14dp"
        android:text="ShowDatabase" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/updateRunner"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="46dp"
        android:text="getStatBYDate" />

</RelativeLayout>