<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="actionMenuTextColor">@color/textChonometer</item>
        <item name="android:actionMenuTextColor">@color/textChonometer</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionMenuTextColor">@color/textChonometer</item>
        <item name="android:actionMenuTextColor">@color/textChonometer</item>
        <item name="android:itemTextAppearance">@color/textChonometer</item>
        
        <item name="android:textColor">@color/textChonometer</item>
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionMenuTextColor">@color/textChonometer</item>
        <item name="android:actionMenuTextColor">@color/textChonometer</item>
         <item name="android:itemTextAppearance">@color/textChonometer</item>
        
         <item name="android:textColor">@color/textChonometer</item>
    </style>

</resources>